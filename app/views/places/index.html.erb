<h1> My beautiful places</h1>

<div class="container">
  <div class="cards">
    <% @places.each do |place|%>
        <div class="card-trip">
          <%= cl_image_tag(place.photo.key, width: 400, height: 300, crop: :fill) %>
          <div class="card-trip-infos">
            <div>
              <h2><%= link_to place.title, place_path(place)  %></h2>
              <p><%= place.description %></p>
            </div>
            <h2 class="card-trip-pricing"><%= place.price %></h2>
            <img src="https://i.pinimg.com/564x/f5/c8/ed/f5c8eded4d6174ebcf6ed3de287b983c.jpg" class="card-trip-user avatar-bordered" />
          </div>
        </div>
    <% end %>
  </div>
</div>
