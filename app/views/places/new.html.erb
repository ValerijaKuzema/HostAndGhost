<div class="container mt-5">
 <h2>Tell us about your place</h2>
  <%= simple_form_for @place do |f| %>
    <%= f.input :title %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :photo, as: :file %>
    <%= f.submit "Save", class: "btn btn-primary"%>

  <% end %>

  <%= link_to " Back to places", places_path %>
</div>
